{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Area of Permanent Forest Reserves in Malaysia by State (2003-2021)",
    "width": 800,
    "height": 400,
    "projection": {
      "type": "equalEarth"
    },
    "data": {
      "url": "../output.json",
      "format": {
        "type": "topojson",
        "feature": "gadm41_MYS_1"
      }
    },
    "transform": [
      {
        "lookup": "properties.NAME_1",
        "from": {
          "data": {
            "url": "../forest_reserve_state.csv"
          },
          "key": "state",
          "fields": ["area"]
        }
      },
      {
        "aggregate": [
          {
            "op": "average",
            "field": "area",
            "as": "average_area"
          }
        ],
        "groupby": ["properties.NAME_1"]
      }
    ],
    "mark": {
      "type": "geoshape"
    },
    "encoding": {
      "color": {
        "field": "area",
        "type": "quantitative",
        "scale": {
          "type": "threshold",
          "domain": [0, 100000, 500000, 1000000, 2000000, 3000000, 4000000, 5000000],
          "range": ["#f7f7f7", "#d9f0a3", "#addd8e", "#78c679", "#41ab5d", "#238443", "#005a32", "#00441b"]
        }
      },
      "tooltip": [
        {"field": "properties.NAME_1", "type": "nominal", "title": "State"},
        {"field": "area", "type": "quantitative", "title": "Area (ha)"}
      ]
    }
  }